<!--index.ejs-->
<div class="container">


<div class="row">
<%persons.forEach( function(model) { %>

<div class="col-lg-4 col-md-6 col-sm-12">

    <div class="card" style="width:20rem;">
    <img style="display:block; margin:0 0;" width="280" height="200"
  class="card-img-top" src="<%=model.Image%>" >
    <div class="card-body">

    <a href="http://localhost:1337/person/view/<%=model.id%>" style="font-size:20px;"class="card-title"><%=model.City%></a>
    <p class="card-text"><%=model.Class%> Class,<%=model.Price%></p>
    <p class="card-text">Valid Till:<%=model.Deal%>.Quota left:<%=model.Quota%></p>
    <p class="card-text" style="color:grey"><%=model.daterange%></p>
    </div>
    </div>
</div>

    <% }); %>
</div>
</div>


<% var current = req.query.page %>
<nav>
    <ul class="pagination">
        <%for(i=1;i<=count;i++){%>
            <li><a href="/person/index/?page=<%=i%>"> <%=i%> </a></li>
        <%}%>
    </ul>
</nav>
