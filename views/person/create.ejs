<script type="text/javascript">

function cultureSelected() {
  var culture = document.getElementById("Region").value;

  var zodiac = document.getElementById("City");
  City.options.length = 0;
  if (culture == "East Asia") {

    var option = document.createElement("option");
    option.text = "Osake";
    option.value = "Osake";
    City.add(option);

    var option = document.createElement("option");
    option.text = "Seoul";
    option.value = "Seoul";
    City.add(option);

    City.disabled = false;
}
if (culture == "South-east Asia") {

  var option = document.createElement("option");
  option.text = "Cebu";
  option.value = "Cebu";
  City.add(option);

  var option = document.createElement("option");
  option.text = "Singapore";
  option.value = "Singapore";
  City.add(option);

  City.disabled = false;
}
if (culture == "Americas") {

  var option = document.createElement("option");
  option.text = "Los Angeles";
  option.value = "Los Angeles";
  City.add(option);

  var option = document.createElement("option");
  option.text = "Boston";
  option.value = "Boston";
  City.add(option);

  City.disabled = false;
}
}
