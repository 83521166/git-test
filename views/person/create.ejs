        <br>
        <label class="control-label ">Price: </label>

        <input class="form-control" name="Person[Price]" type="text" id="Price">
    </div>
  </div>
</div>

<!--card-->



<div class="card">
   <div class="col-sm-12 col-md-6">

        <label class="control-label ">Image: </label>
