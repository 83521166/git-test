<!--paginate.ejs-->
<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">


<div class="container">

<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-8">


<div class="row">
<%persons.forEach( function(model) { %>

<div class="col-md-6 col-sm-12">

    <div class="card" style="width:20rem;">
    <img style="display:block; margin:0 0;" width="200" height="150"
  class="card-img-top" src="<%=model.Image%>" >
    <div class="card-body">

    <p style="font-size:20px;"class="card-title"><%=model.City%></p>
    <p class="card-text"><%=model.Class%> Class,<%=model.Price%></p>
    <p class="card-text">Valid Till:<%=model.Deal%>.Quota left:<%=model.Quota%></p>
    <p class="card-text" style="color:grey"><%=model.daterange%></p>
    </div>
    </div>
</div>

    <% }); %>
</div>
</div>


<div class="card">
  <div class="col-lg-4 col-md-4 col-sm-12">
    <div class="form-group">

        <label class="control-label">Region: </label><br>
          <select style="width:300px" class="form-control" name="Person[Region]"id="Region" onchange="cultureSelected()">
          <option value="nan">All regions</option>
          <option value="East Asia">East Asia</option>
          <option value="South-east Asia">South-east Asia</option>
          <option value="Americas">Americas</option>
          </select>
      </div>
<div style="position: relative; padding: 200px;">

    <div>
        <input type="text" id="range" value="" name="range" />
    </div>


<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.js"></script>
<!-- Include Required Prerequisites -->
<script type="text/javascript" src="//cdn.jsdelivr.net/jquery/1/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap/3/css/bootstrap.css" />

<!-- Include Date Range Picker -->
<script type="text/javascript" src="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css" />

<script src="https://cdn.bootcss.com/ion-rangeslider/2.2.0/js/ion.rangeSlider.js"></script>

<script>

    $(function () {

        $("#range").ionRangeSlider({
            hide_min_max: true,
            keyboard: true,
            min: 0,
            max: 5000,
            from: 1000,
            to: 4000,
            type: 'double',
            step: 1,
            prefix: "$",
            grid: true
        });

    });
</script>
</div>

<label class="control-label ">Dates: </label>
<br>
<input type="text" value="01/01/2015 - 01/31/2015" id="daterange" name="Person[Date]">

<button class="btn btn-default" type="submit" value="ADD">Submit</button>

</div>
</div>
</div>
<% var current = req.query.page %>
<nav>
    <ul class="pagination">

        <%for(i=1;i<=count;i++){%>
            <li><a href="/person/paginate/?page=<%=i%>"> <%=i%> </a></li>
        <%}%>

    </ul>
</nav>

<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>

<script type="text/javascript" src="//cdn.jsdelivr.net/jquery/1/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap/3/css/bootstrap.css" />
<!-- Include Date Range Picker -->
<script src="https://cdn.bootcss.com/bootstrap-daterangepicker/2.1.25/daterangepicker.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css" />

<script src="https://cdn.bootcss.com/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>

<script type="text/javascript"  >

    $('input[id="daterange"]').daterangepicker();

</script>
